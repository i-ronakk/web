  <!-- Minimal JS for interactions -->
  <script>
    // Populate year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Modal open/close helpers (expandable to show real product info)
    const modal = document.getElementById('modal');
    function openModal(product){
      // product param could be an object to populate modal fields
      modal.classList.add('open');
      modal.setAttribute('aria-hidden','false');
    }
    function closeModal(){
      modal.classList.remove('open');
      modal.setAttribute('aria-hidden','true');
    }

    // Accessibility: close modal on Escape
    document.addEventListener('keydown', (e) => {
      if(e.key === 'Escape' && modal.classList.contains('open')) closeModal();
    });

    // Quick demo: clicking any product opens modal
    document.querySelectorAll('.card').forEach((c)=>{
      c.addEventListener('click', ()=> openModal());
      c.addEventListener('keypress', (e)=> { if(e.key === 'Enter' || e.key === ' ') openModal();});
    });

    // Newsletter stub
    function subscribe(){
      const email = document.getElementById('email').value;
      if(!email) return;
      // Replace with real POST to your backend or Mail provider
      alert('Thanks — ' + email + ' added to the list (demo).');
      document.getElementById('newsletterForm').reset();
    }

    // Load more products (demo stub)
    function loadMore(){
      const grid = document.getElementById('productGrid');
      for(let i=0;i<4;i++){
        const a = document.createElement('article');
        a.className='card';
        a.tabIndex=0;
        a.innerHTML = `
          <div class="img"><img src="https://via.placeholder.com/600x600?text=Extra+Item" alt="Extra item" style="width:100%;height:100%;object-fit:cover" /></div>
          <div class="meta">
            <div>
              <div class="product-title">Extra Item</div>
              <div class="muted-small">Limited</div>
            </div>
            <div class="price">₹2,900</div>
          </div>
        `;
        a.addEventListener('click', ()=> openModal());
        grid.appendChild(a);
      }
    }

    // Cart button demo
    document.getElementById('cartBtn').addEventListener('click', ()=> {
      alert('Cart is empty (demo).');
    });
  </script>
